<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fyt.findyourtime.MainActivity"
    android:id="@+id/activity_main">


    <Button
        android:id="@+id/button3"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginBottom="161dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="130dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/scheduleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/scheduleButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="161dp"
        android:background="#dfe6ec"
        android:onClick="sendScheduleActivity"
        android:src="@drawable/calendar_100"
        app:layout_constraintBottom_toTopOf="@+id/textSchedule"
        app:layout_constraintEnd_toStartOf="@+id/taskButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/taskButton"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="161dp"
        android:background="#dfe6ec"
        android:onClick="sendTasksActivity"
        android:src="@drawable/tasks_100"
        app:layout_constraintBottom_toTopOf="@+id/textTasks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scheduleButton"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textSchedule"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="32dp"
        android:background="#dfe6ec"
        android:text="@string/button_schedule"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textTasks"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textTasks"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="39dp"
        android:background="#dfe6ec"
        android:text="@string/button_tasks"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textSchedule" />

</android.support.constraint.ConstraintLayout>
